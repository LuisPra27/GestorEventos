# Configuración para Railway - Gestor de Eventos
# Las variables marcadas con [RAILWAY] se configuran automáticamente

APP_NAME="Gestor de Eventos"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Guayaquil
APP_URL=https://your-domain.railway.app

# Base de datos PostgreSQL [RAILWAY - Se configuran automáticamente]
# Railway proporciona estas variables cuando conectas PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# Configuración de Broadcasting
BROADCAST_DRIVER=log

# Configuración de Cache
CACHE_DRIVER=file
CACHE_PREFIX=gestor_eventos

# Configuración de Filesystem
FILESYSTEM_DISK=local

# Configuración de Queue
QUEUE_CONNECTION=sync

# Configuración de Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Configuración de Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuración de Mail (opcional)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración adicional
BCRYPT_ROUNDS=12

# Variables específicas de Railway
RAILWAY_ENVIRONMENT=production
